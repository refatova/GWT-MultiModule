<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .messageStyle {
            color: black;
            width: 350px;
            padding: 5px;
            text-align: center;
        }
        .buttonStyle{
            margin: 10px;
            margin-left: 17%;
            padding: 3px 10px;
            background: orange;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:Label ui:field='greetingMessage' styleName="{style.messageStyle}"/>
        <g:Button ui:field="returnButton" styleName="{style.buttonStyle}"/>
    </g:HTMLPanel>
</ui:UiBinder>