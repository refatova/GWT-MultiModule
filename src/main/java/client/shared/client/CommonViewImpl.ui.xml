<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="Hello.css">
        .content {
            margin-left: 35%;
            margin-top: 10%;
            height: 350px;
        }

    </ui:style>
    <g:HTMLPanel>
        <div class="wrapper">
            <div id="header">
                <div id="logoContainer">
                    <img src="img/logo.png" height="100" alt="Logo"/>
                </div>
                <div id="helper">
                    <a href="/help">Help</a>
                    <a href="UploadPage.html">Upload file</a>
                </div>
            </div>
            <hr/>
            <g:SimplePanel ui:field="content" styleName="{style.content}"/>
        </div>
        <hr/>
        <div id="footer">
            <p>2016 Ardas Group</p>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>